<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AlphaRelease" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/reddish_purple</item>
        <item name="colorPrimaryVariant">@color/wine_red</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/reddish_purple</item>
        <item name="colorSecondaryVariant">@color/wine_red</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorButtonNormal">?attr/colorPrimaryVariant</item>
        <item name="android:colorControlHighlight">@color/ripple</item>
    </style>

    <style name="Theme.AlphaRelease.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AlphaRelease.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AlphaRelease.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>